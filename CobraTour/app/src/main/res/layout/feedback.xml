<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/feedback_page">

    <Button
        android:id="@+id/verybad_button"
        android:layout_width="42.44dp"
        android:layout_height="42.44dp"
        android:background="@drawable/verybad_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/bad_button"
        app:layout_constraintHorizontal_bias="0.56"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.311"
        android:visibility="visible"/>

    <Button
        android:id="@+id/verybad_clicked"
        android:layout_width="42.44dp"
        android:layout_height="42.44dp"
        android:background="@drawable/verybad_clicked"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/bad_button"
        app:layout_constraintHorizontal_bias="0.56"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.311"
        android:visibility="gone"/>

    <Button
        android:id="@+id/bad_button"
        android:layout_width="42.44dp"
        android:layout_height="42.44dp"
        android:background="@drawable/bad_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/neutral_button"
        app:layout_constraintHorizontal_bias="0.795"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.311"
        android:visibility="visible"/>

    <Button
        android:id="@+id/bad_clicked"
        android:layout_width="42.44dp"
        android:layout_height="42.44dp"
        android:background="@drawable/bad_clicked"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/neutral_button"
        app:layout_constraintHorizontal_bias="0.795"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.311"
        android:visibility="gone"/>

    <Button
        android:id="@+id/neutral_button"
        android:layout_width="42.44dp"
        android:layout_height="42.44dp"
        android:background="@drawable/neutral_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.311"
        android:visibility="visible"/>

    <Button
        android:id="@+id/neutral_clicked"
        android:layout_width="42.44dp"
        android:layout_height="42.44dp"
        android:background="@drawable/neutral_clicked"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.311"
        android:visibility="gone"/>

    <Button
        android:id="@+id/good_button"
        android:layout_width="42.44dp"
        android:layout_height="42.44dp"
        android:background="@drawable/good_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.189"
        app:layout_constraintStart_toEndOf="@+id/neutral_button"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.311"
        android:visibility="visible"/>

    <Button
        android:id="@+id/good_clicked"
        android:layout_width="42.44dp"
        android:layout_height="42.44dp"
        android:background="@drawable/good_clicked"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.189"
        app:layout_constraintStart_toEndOf="@+id/neutral_button"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.311"
        android:visibility="gone"/>

    <Button
        android:id="@+id/verygood_button"
        android:layout_width="42.44dp"
        android:layout_height="42.44dp"
        android:background="@drawable/verygood_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.42"
        app:layout_constraintStart_toEndOf="@+id/good_button"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.311"
        android:visibility="visible"/>

    <Button
        android:id="@+id/verygood_clicked"
        android:layout_width="42.44dp"
        android:layout_height="42.44dp"
        android:background="@drawable/verygood_clicked"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.42"
        app:layout_constraintStart_toEndOf="@+id/good_button"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.311"
        android:visibility="gone"/>



    <EditText
        android:id="@+id/email_box"
        android:layout_width="350dp"
        android:layout_height="42dp"
        android:background="@drawable/email_box"
        android:ems="10"
        android:fontFamily="@font/inter"
        android:gravity="top|start"
        android:inputType="textEmailAddress"
        android:paddingTop="0dp"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.773" />

    <EditText
        android:id="@+id/comment_box"
        android:layout_width="350dp"
        android:layout_height="182dp"
        android:background="@drawable/comment_box"
        android:ems="10"
        android:fontFamily="@font/inter"
        android:gravity="top|start"
        android:inputType="textMultiLine"
        android:paddingTop="0dp"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.563" />

    <Button
        android:id="@+id/back_button"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:background="@drawable/back_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.068"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.021" />

    <Button
        android:id="@+id/submit_button"
        android:layout_width="0dp"
        android:layout_height="58dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/submit_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.933" />

</androidx.constraintlayout.widget.ConstraintLayout>